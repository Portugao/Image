{# purpose of this template: pictures rss feed #}
<?xml version="1.0" encoding="{% set charset = pageGetVar('meta.charset') %}{% if charset == 'ISO-8859-15' %}ISO-8859-1{% else %}{{ charset }}{% endif %}" ?>
<rss version="2.0"
    xmlns:dc="http://purl.org/dc/elements/1.1/"
    xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
    xmlns:admin="http://webns.net/mvcb/"
    xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
    xmlns:content="http://purl.org/rss/1.0/modules/content/"
    xmlns:atom="http://www.w3.org/2005/Atom">
{#<rss version="0.92">#}
    <channel>
        <title>{{ __('Latest pictures') }}</title>
        <link>{{ app.request.schemeAndHttpHost ~ app.request.basePath }}</link>
        <atom:link href="{{ app.request.schemeAndHttpHost ~ app.request.basePath ~ app.request.pathInfo }}" rel="self" type="application/rss+xml" />
        <description>{{ __('A direct feed showing the list of pictures') }} - {{ getSystemVar('slogan') }}</description>
        <language>{{ app.request.locale }}</language>
        {# commented out as imagepath is not defined and we can't know whether this logo exists or not
        <image>
            <title>{{ getSystemVar('sitename') }}</title>
            <url>{{ app.request.schemeAndHttpHost ~ app.request.basePath }}{{ imagepath }}/logo.jpg</url>
            <link>{{ app.request.schemeAndHttpHost ~ app.request.basePath }}</link>
        </image>
        #}
        <docs>http://blogs.law.harvard.edu/tech/rss</docs>
        <copyright>Copyright (c) {{ 'now'|date('Y') }}, {{ app.request.schemeAndHttpHost }}</copyright>
        <webMaster>{{ pageGetVar('adminmail') }}</webMaster>
{% for picture in items %}
    <item>
        <title><![CDATA[{% if picture.updatedDate|default %}{{ picture.updatedDate|localizeddate('medium', 'short') }} - {% endif %}{{ picture|muimagemodule_formattedTitle|notifyFilters('muimagemodule.filterhook.pictures')|safeHtml }}]]></title>
        <link>{{ url('muimagemodule_picture_' ~ routeArea ~ 'display', {'id': picture.getId()}) }}</link>
        <guid>{{ url('muimagemodule_picture_' ~ routeArea ~ 'display', {'id': picture.getId()}) }}</guid>
        {% if picture.createdBy|default and picture.createdBy.getUid() > 0 %}
            {% set creatorAttributes = picture.createdBy.getAttributes() %}
            <author>{{ picture.createdBy.getEmail() }} ({{ creatorAttributes.get('realname')|default(creatorAttributes.get('name'))|default(picture.createdBy.getUname()) }})</author>
        {% endif %}
        <description>
            <![CDATA[
            {{ picture.description|replace({'<br>': '<br />'}) }}
            ]]>
        </description>
        {% if picture.createdDate|default %}
            <pubDate>{{ picture.createdDate|date('r') }}</pubDate>
        {% endif %}
    </item>
{% endfor %}
    </channel>
</rss>
