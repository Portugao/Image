{# Purpose of this template: Display a popup selector of pictures for scribite integration #}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="{{ lang() }}" lang="{{ lang() }}">
<head>
    <title>{{ __('Search and select picture') }}</title>
    <link type="text/css" rel="stylesheet" href="{{ zasset('style/core.css') }}" />
    <link type="text/css" rel="stylesheet" href="{{ zasset('@MUMUImageModule:css/style.css') }}" />
    <link type="text/css" rel="stylesheet" href="{{ zasset('@MUMUImageModule:css/finder.css') }}" />
    <script type="text/javascript">/* <![CDATA[ */
        if (typeof(Zikula) == 'undefined') {var Zikula = {};}
        Zikula.Config = {'entrypoint': '{{ getModVar('ZConfig', 'entrypoint', 'index.php') }}', 'baseURL': '{{ pageGetVar('homepath') }}'}; /* ]]> */
    </script>
    <link rel="stylesheet" href="web/bootstrap/css/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="web/bootstrap/css/bootstrap-theme.css" type="text/css" />
    <script type="text/javascript" src="web/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="web/bootstrap/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="{{ zasset('@MUMUImageModule:js/MUMUImageModule.Finder.js') }}"></script>
</head>
<body>
    <div class="container">
        <ul class="nav nav-pills nav-justified">
        <li{{ objectType == 'album' ? ' class="active"' : '' }}><a href="{{ path('mumuimagemodule_external_finder', {'objectType': 'album', 'editor': editorName}) }}" title="{{ __('Search and select album') }}">{{ __('Albums') }}</a></li>
        </ul>
        {% form_theme finderForm with [
            '@MUMUImageModule/Form/bootstrap_3.html.twig',
            'ZikulaFormExtensionBundle:Form:form_div_layout.html.twig'
        ] %}
        {{ form_start(finderForm, {attr: {id: 'mUMUImageModuleSelectorForm'}}) }}
        {{ form_errors(finderForm) }}
        <fieldset>
            <legend>{{ __('Search and select picture') }}</legend>
            {{ form_row(finderForm.pasteas) }}
            <br />
            <div class="form-group">
                <label for="mUMUImageModuleObjectId" class="col-sm-3 control-label">{{ __('Picture') }}:</label>
                <div class="col-sm-9">
                    <div id="mumuimagemoduleItemContainer">
                        <ul>
                        {% for picture in items %}
                            <li>
                                {% set itemId = picture.id }}
                                <a href="#" data-itemid="{{ itemId }}">{{ picture->getTitleFromDisplayPattern() }}</a>
                                <input type="hidden" id="url{{ itemId }}" value="{{ url('mumuimagemodule_picture_display', { 'id': picture.id }) }}" />
                                <input type="hidden" id="title{{ itemId }}" value="{{ picture.getTitleFromDisplayPattern()|e('html_attr') }}" />
                                <input type="hidden" id="desc{{ itemId }}" value="{% set description %}{% if picture.description is not empty %}{{ picture.description }}{% endif %}
                                {% endset %}{{ description|striptags|e('html_attr') }}" />
                            </li>
                        {% else %}
                            <li>{{ __('No entries found.') }}</li>
                        {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>

            {{ form_row(finderForm.sort) }}
            {{ form_row(finderForm.sortdir) }}
            {{ form_row(finderForm.num) }}
            {{ form_row(finderForm.q) }}
            <div>
                {{ pager({ display: 'page', rowcount: pager.numitems, limit: pager.itemsperpage, posvar: 'pos', maxpages: 10, route: 'mumuimagemodule_external_finder'}) }}
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    {{ form_widget(finderForm.update) }}
                    {{ form_widget(finderForm.cancel) }}
                </div>
            </div>
        </fieldset>
        {{ form_end(finderForm) }}
    </div>

    <script type="text/javascript">
    /* <![CDATA[ */
        ( function($) {
            $(document).ready(function() {
                mUMUImageModule.finder.onLoad();
            });
        })(jQuery);
    /* ]]> */
    </script>

    {#
    <div class="mumuimagemodule-finderform">
        <fieldset>
            {{ render(controller('MUMUImageModule:Admin:edit')) }}
        </fieldset>
    </div>
    #}
</body>
</html>
