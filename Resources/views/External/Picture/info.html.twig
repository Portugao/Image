{# Purpose of this template: Display item information for previewing from other modules #}
<dl id="picture{{ picture.id }}">
<dt>{{ picture.getTitleFromDisplayPattern()|notifyfilters('muimage.filter_hooks.pictures.filter') }}</dt>
<dd><a href="{{ picture.imageUploadFullPathURL }}" title="{{ picture.getTitleFromDisplayPattern()|e('html_attr') }}"{% if picture.imageUploadMeta.isImage %} class="lightbox"{% endif %}>
{% if picture.imageUploadMeta.isImage %}
    {{ mumuimagemodule_thumb({ image: picture.imageUploadFullPath, objectid: 'picture-' ~ picture.id ~ '', preset: pictureThumbPresetImageUpload, tag: true, img_alt: picture.getTitleFromDisplayPattern(), img_class: 'img-thumbnail' }) }}
{% else %}
    {{ __('Download') }} ({{ picture.imageUploadMeta.size|mumuimagemodule_fileSize(picture.imageUploadFullPath, false, false) }})
{% endif %}
</a>
</dd>
{% if picture.description is not empty %}<dd>{{ picture.description }}</dd>{% endif %}
</dl>
