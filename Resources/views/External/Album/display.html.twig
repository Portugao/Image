{# Purpose of this template: Display one certain album within an external context #}
<div id="album{$album.id}" class="mumuimagemodule-external-album">
{% if displayMode == 'link' %}
    <p class="mumuimagemodule-external-link">
    <a href="{{ path('mumuimagemodule_album_display', { 'id': album.id }) }}" title="{{ album.getTitleFromDisplayPattern()|e('html_attr') }}">
    {{ album.getTitleFromDisplayPattern()|notifyfilters('muimage.filter_hooks.albums.filter') }}
    </a>
    </p>
{% endif %}
{% if hasPermission('MUMUImageModule::', '::', 'ACCESS_EDIT') %}
    {# for normal users without edit permission show only the actual file per default #}
    {% if displayMode == 'embed' %}
        <p class="mumuimagemodule-external-title">
            <strong>{{ album.getTitleFromDisplayPattern()|notifyfilters('muimage.filter_hooks.albums.filter') }}</strong>
        </p>
    {% endif %}
{% endif %}

{% if displayMode == 'link' %}
{% elseif displayMode == 'embed' %}
    <div class="mumuimagemodule-external-snippet">
        &nbsp;
    </div>

    {# you can distinguish the context like this: #}
    {# % if source == 'contentType' %}
        ...
    {% elseif source == 'scribite' %}
        ...
    {% endif % #}

    {# you can enable more details about the item: #}
    {#
        <p class="mumuimagemodule-external-description">
            {% if album.description is not empty %}{{ album.description }}<br />{% endif %}
            <dl class="category-list">
            {% for propName, catMapping in album.categories %}
                <dt>{{ propName }}</dt>
                <dd>{{ catMapping.category.display_name[lang] }}</dd>
            {% endfor %}
            </dl>
        </p>
    #}
{/if}
</div>
