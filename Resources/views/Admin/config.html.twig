{# purpose of this template: module configuration page #}
{% extends 'MUMUImageModule::adminBase.html.twig' %}
{% block title __('Settings') %}
{% block admin_page_icon 'wrench' %}
{% block content %}
    <div class="mumuimagemodule-config">
        {% form_theme form with [
            '@MUMUImageModule/Form/bootstrap_3.html.twig',
            'ZikulaFormExtensionBundle:Form:form_div_layout.html.twig'
        ] %}
        {{ form_start(form) }}
        <ul class="nav nav-pills">
        {% set tabTitle = __('General') %}
        <li class="active" data-toggle="pill"><a href="#tab1" title="{{ tabTitle|e('html_attr') }}" role="tab" data-toggle="tab">{{ tabTitle }}</a></li>
        {% set tabTitle = __('Slideshows') %}
        <li data-toggle="pill"><a href="#tab2" title="{{ tabTitle|e('html_attr') }}" role="tab" data-toggle="tab">{{ tabTitle }}</a></li>
        {% set tabTitle = __('Upload handlers') %}
        <li data-toggle="pill"><a href="#tab3" title="{{ tabTitle|e('html_attr') }}" role="tab" data-toggle="tab">{{ tabTitle }}</a></li>
        </ul>

        {{ form_errors(form) }}
        <div class="tab-content">
            {% set tabTitle = __('General') %}
            <div role="tabpanel" class="tab-pane fade in active" id="tab1">
                <fieldset>
                    <legend>{{ tabTitle }}</legend>
                
                    <p class="alert alert-info">{{ __('Here you can manage all basic settings for this application.') }}</p>
                
                    {{ form_row(form.pagesize) }}
                    {{ form_row(form.pageSizeAdminAlbums) }}
                    {{ form_row(form.pageSizeAdminPictures) }}
                    {{ form_row(form.showTitle) }}
                    {{ form_row(form.showDescription) }}
                    {{ form_row(form.countImageView) }}
                    {{ form_row(form.numberParentAlbums) }}
                    {{ form_row(form.numberSubAlbums) }}
                    {{ form_row(form.numberPictures) }}
                    {{ form_row(form.fileSize) }}
                    {{ form_row(form.minWidth) }}
                    {{ form_row(form.maxWidth) }}
                    {{ form_row(form.maxHeight) }}
                    {{ form_row(form.groupForCommonAlbums) }}
                    {{ form_row(form.supportCategories) }}
                    {{ form_row(form.supportSubAlbums) }}
                    {{ form_row(form.breadcrumbInFrontend) }}
                    {{ form_row(form.kindOfShowSubAlbums) }}
                    {{ form_row(form.ending) }}
                    {{ form_row(form.userDeletePictures) }}
                </fieldset>
            </div>
            {% set tabTitle = __('Slideshows') %}
            <div role="tabpanel" class="tab-pane fade" id="tab2">
                <fieldset>
                    <legend>{{ tabTitle }}</legend>
                
                
                    {{ form_row(form.slideshow1) }}
                    {{ form_row(form.slide1Interval) }}
                    {{ form_row(form.slide1Speed) }}
                </fieldset>
            </div>
            {% set tabTitle = __('Upload handlers') %}
            <div role="tabpanel" class="tab-pane fade" id="tab3">
                <fieldset>
                    <legend>{{ tabTitle }}</legend>
                
                
                    {{ form_row(form.createSeveralPictureSizes) }}
                    {{ form_row(form.widthFirst) }}
                    {{ form_row(form.heightFirst) }}
                    {{ form_row(form.widthSecond) }}
                    {{ form_row(form.heightSecond) }}
                    {{ form_row(form.widthThird) }}
                    {{ form_row(form.heightThird) }}
                    {{ form_row(form.shrinkPictures) }}
                    {{ form_row(form.fileNameForTitle) }}
                </fieldset>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                {{ form_widget(form.save) }}
                {{ form_widget(form.cancel) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
{% block footer %}
    {{ parent() }}

    <script type="text/javascript">
    /* <![CDATA[ */
        ( function($) {
            $(document).ready(function() {
                $('.mumuimagemodule-form-tooltips').tooltip();
            });
        })(jQuery);
    /* ]]> */
    </script>
{% endblock %}
