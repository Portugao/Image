{# purpose of this template: inclusion template for display of related albums #}
{% set hasAdminPermission = hasPermission('MUImageModule:Album:', '::', 'ACCESS_EDIT') %}
{% if nolink is not defined %}
    {% set nolink = false %}
{% endif %}
{% if items|default and items|length > 0 %}
<ul class="muimagemodule-related-item-list album">
{% for item in items %}
    {% if hasAdminPermission or item.workflowState == 'approved' %}
    <li>
{% spaceless %}
{% if not nolink %}
    <a href="{{ path('muimagemodule_album_' ~ routeArea ~ 'display', { 'id': item.id }) }}" title="{{ item.getTitleFromDisplayPattern()|e('html_attr') }}">
{% endif %}
    {{ item.getTitleFromDisplayPattern() }}
{% if not nolink %}
    </a>
    <a id="albumItem{{ item.id }}Display" href="{{ path('muimagemodule_album_' ~ routeArea ~ 'display', { 'id': item.id, 'theme': 'ZikulaPrinterTheme' }) }}" title="{{ __('Open quick view window') }}" class="fa fa-search-plus hidden"></a>
{% endif %}
{% endspaceless %}
{% if not nolink %}
    <script type="text/javascript">
    /* <![CDATA[ */
        ( function($) {
            $(document).ready(function() {
                mUImageInitInlineWindow($('#albumItem{{ item.id }}Display'), '{{ item.getTitleFromDisplayPattern()|e('js') }}');
            });
        })(jQuery);
    /* ]]> */
    </script>
{% endif %}
    </li>
    {% endif %}
{% endfor %}
</ul>
{% endif %}
