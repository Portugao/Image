{# purpose of this template: build the form to edit an instance of album #}
{% extends routeArea == 'admin' ? 'MUImageModule::adminBase.html.twig' : 'MUImageModule::base.html.twig' %}

{% block header %}
    {{ parent() }}
    {{ pageAddAsset('javascript', zasset('@MUImageModule:js/MUImageModule.Validation.js', 98)) }}
    {{ pageAddAsset('javascript', zasset('@MUImageModule:js/MUImageModule.EditFunctions.js', 99)) }}
    {{ pageAddAsset('javascript', pagevars.homepath ~ 'vendor/twitter/typeahead.js/dist/typeahead.bundle.min.js') }}
{% endblock %}

{% block title mode == 'create' ? __('Create album') : __('Edit album') %}
{% block admin_page_icon mode == 'create' ? 'plus' : 'pencil-square-o' %}
{% block content %}
    <div class="muimagemodule-album muimagemodule-edit">
{% form_theme form with [
    '@MUImageModule/Form/bootstrap_3.html.twig',
    'ZikulaFormExtensionBundle:Form:form_div_layout.html.twig'
] %}
{{ form_start(form, {attr: {id: 'albumEditForm', class: 'muimage-edit-form'}}) }}
{{ form_errors(form) }}
<div class="panel-group" id="accordion">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseFields">{{ __('Fields') }}</a></h3>
        </div>
        <div id="collapseFields" class="panel-collapse collapse in">
            <div class="panel-body">
                <fieldset>
                    <legend>{{ __('Content') }}</legend>
                    
                    {{ form_row(form.title) }}
                    
                    {{ form_row(form.description) }}
                    
                    {% set extended = getModVar('MUImageModule', 'useExtendedFeatures') %}
                    {% set subAlbums = getModVar('MUImageModule', 'supportSubAlbums') %}
                    {% if extended == 0 %}
                    <div class="hidden">
                    {% endif %}
                    {{ form_row(form.albumAccess) }}
                    
                    {{ form_row(form.passwordAccess) }}
                    
                    {{ form_row(form.myFriends) }}
                    {% if extended == 0 %}
                    </div>
                    {% endif %}
                    
                    {{ form_row(form.notInFrontend) }}
                    
                    <div class="hidden">
                        {{ form_row(form.pos) }}
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
    {% set cats = getModVar('MUImageModule', 'supportCategories') %}
    {% if cats != 1 %}
    <div class="hidden">
    {% endif %}
    {% if featureActivationHelper.isEnabled(constant('MU\\ImageModule\\Helper\\FeatureActivationHelper::CATEGORIES'), 'album') %}
        {{ include('@MUImageModule/Helper/includeCategoriesEdit.html.twig', { obj: album, panel: true }) }}
    {% if cats != 1 %}   
    </div>
    {% endif %}
    {% endif %}    
    {% if extended == 1 and subAlbums == 1 %}
    {{ include(
        '@MUImageModule/Album/includeSelectOne.html.twig',
        { group: 'album', alias: 'album', aliasReverse: 'albums', mandatory: false, idPrefix: 'muimageAlbum_Album', linkingItem: album, panel: true, displayMode: 'choices', allowEditing: false }
    ) }}
    {% else %}
        <div class="hidden">       
            {{ include(
            '@MUImageModule/Album/includeSelectOne.html.twig',
            { group: 'album', alias: 'album', aliasReverse: 'albums', mandatory: false, idPrefix: 'muimageAlbum_Album', linkingItem: album, panel: true, displayMode: 'choices', allowEditing: false }
            ) }}
        </div>
    {% endif %}
    {#{ include(
        '@MUImageModule/Album/Many.html.twig',
        { group: 'album', alias: 'albums', aliasReverse: 'album', mandatory: false, idPrefix: 'muimageAlbum_Albums', linkingItem: album, panel: true, displayMode: 'choices', allowEditing: true }
    ) }}
    {{ include(
        '@MUImageModule/Picture/Many.html.twig',
        { group: 'album', alias: 'pictures', aliasReverse: 'album', mandatory: false, idPrefix: 'muimageAlbum_Pictures', linkingItem: album, panel: true, displayMode: 'choices', allowEditing: true }
    ) }#}
    {% if mode != 'create' %}
        {{ include('@MUImageModule/Helper/includeStandardFieldsEdit.html.twig', { obj: album, panel: true }) }}
    {% endif %}
    
    {# include display hooks #}
    {% set hookId = mode != 'create' ? album.id : null %}
    {% set hooks = notifyDisplayHooks(eventName='muimagemodule.ui_hooks.albums.form_edit', id=hookId) %}
    {% if hooks is iterable and hooks|length > 0 %}
        {% for providerArea, hook in hooks %}
            {% if providerArea != 'provider.scribite.ui_hooks.editor' %}{# fix for #664 #}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseHook{{ loop.index }}">{{ providerArea }}</a></h3>
                    </div>
                    <div id="collapseHook{{ loop.index }}" class="panel-collapse collapse in">
                        <div class="panel-body">
                            {{ hook }}
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    {% endif %}
    
    
    {# include return control #}
    {% if mode == 'create' %}
        <fieldset>
            <legend>{{ __('Return control') }}</legend>
            {{ form_row(form.repeatCreation) }}
        </fieldset>
    {% endif %}
    
    {# include possible submit actions #}
    <div class="form-group form-buttons">
        <div class="col-sm-offset-3 col-sm-9">
            {% for action in actions %}
                {{ form_widget(attribute(form, action.id)) }}
            {% endfor %}
            {{ form_widget(form.reset) }}
            {{ form_widget(form.cancel) }}
        </div>
    </div>
</div>
{{ form_end(form) }}
</div>
{% endblock %}
{% block footer %}
    {{ parent() }}

    {% set editImage = '<span class="fa fa-pencil-square-o"></span>' %}
    {% set deleteImage = '<span class="fa fa-trash-o"></span>' %}
    
    <script type="text/javascript">
    /* <![CDATA[ */
        
        
        ( function($) {
            $(document).ready(function() {
                mUImageInitEditForm('{{ mode }}', '{% if mode != 'create' %}{{ album.id }}{% endif %}');
            });
        })(jQuery);
    /* ]]> */
    </script>
{% endblock %}
