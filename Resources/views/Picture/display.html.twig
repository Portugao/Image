{# purpose of this template: pictures display view #}
{% extends routeArea == 'admin' ? 'MUImageModule::adminBase.html.twig' : 'MUImageModule::base.html.twig' %}
{% block pageTitle %}{{ picture.getTitleFromDisplayPattern()|default(__('Picture')) }}{% endblock %}
{% block title %}
    {% set templateTitle = picture.getTitleFromDisplayPattern()|default(__('Picture')) %}
    {{ templateTitle|notifyFilters('muimagemodule.filter_hooks.pictures.filter') }}
    {% set itemActions = knp_menu_get('MUImageModule:ItemActionsMenu:menu', [], { entity: picture, area: routeArea, context: 'display' }) %}
    <div class="dropdown">
        <a id="itemActions{{ picture.id }}DropDownToggle" role="button" data-toggle="dropdown" data-target="#" href="javascript:void(0);" class="hidden dropdown-toggle"><i class="fa fa-tasks"></i> {{ __('Actions') }} <span class="caret"></span></a>
        
        {{ knp_menu_render(itemActions, { template: 'ZikulaMenuModule:Override:actions.html.twig' }) }}
    </div>
    <script type="text/javascript">
    /* <![CDATA[ */
        ( function($) {
            $(document).ready(function() {
                $('h2 .dropdown > ul, h3 .dropdown > ul').removeClass('list-inline').addClass('list-unstyled dropdown-menu');
                $('h2 .dropdown > ul a, h3 .dropdown > ul a').each(function (index) {
                    $(this).html($(this).html() + $(this).find('i').first().data('original-title'));
                });
                $('h2 .dropdown > ul a i, h3 .dropdown > ul a i').addClass('fa-fw');
                $('h2 .dropdown-toggle, h3 .dropdown-toggle').removeClass('hidden').dropdown();
            });
        })(jQuery);
    /* ]]> */
    </script>
{% endblock %}
{% block admin_page_icon 'eye' %}
{% block content %}
    <div class="muimagemodule-picture muimagemodule-display">


    <dl>
        {% if picture.title is not empty %}
            <dt>{{ __('Title') }}</dt>
            <dd>{{ picture.title }}</dd>
        {% endif %}
        {% if picture.description is not empty %}
            <dt>{{ __('Description') }}</dt>
            <dd>{{ picture.description|safeHtml }}</dd>
        {% endif %}
        {% if picture.imageUpload is not empty %}
            <dt>{{ __('Image upload') }}</dt>
            <dd>{% if picture.imageUploadMeta|default %}
            <a href="{{ picture.imageUploadUrl }}" title="{{ picture.getTitleFromDisplayPattern()|e('html_attr') }}"{% if picture.imageUploadMeta.isImage %} class="lightbox"{% endif %}>
            {% if picture.imageUploadMeta.isImage %}
                {% set thumbOptions = attribute(thumbRuntimeOptions, 'pictureImageUpload') %}
                <img src="{{ picture.imageUpload.getPathname()|imagine_filter('zkroot', thumbOptions) }}" alt="{{ picture.getTitleFromDisplayPattern()|e('html_attr') }}" width="{{ thumbOptions.thumbnail.size[0] }}" height="{{ thumbOptions.thumbnail.size[1] }}" class="img-thumbnail" />
            {% else %}
                {{ __('Download') }} ({{ picture.imageUploadMeta.size|muimagemodule_fileSize(picture.imageUpload.getPathname(), false, false) }})
            {% endif %}
            </a>
            {% endif %}
            </dd>
        {% endif %}
        {% if picture.imageView is not empty %}
            <dt>{{ __('Image view') }}</dt>
            <dd>{{ picture.imageView }}</dd>
        {% endif %}
        {% if picture.albumImage is not empty %}
            <dt>{{ __('Album image') }}</dt>
            <dd>{% if picture.albumImage %}
                <i class="fa fa-check" title="{{ __('Yes') }}"></i>
            {% else %}
                <i class="fa fa-times" title="{{ __('No') }}"></i>
            {% endif %}
            </dd>
        {% endif %}
        {% if picture.pos is not empty %}
            <dt>{{ __('Pos') }}</dt>
            <dd>{{ picture.pos }}</dd>
        {% endif %}
        {% if picture.album|default %}
        <dt>{{ __('Album') }}</dt>
        <dd>
          {% if app.request.query.get('theme') != 'ZikulaPrinterTheme' %}
              <a href="{{ path('muimagemodule_album_' ~ routeArea ~ 'display', { 'id': picture.album.id }) }}">{% spaceless %}
                {{ picture.album.getTitleFromDisplayPattern() }}
              {% endspaceless %}</a>
              <a id="albumItem{{ picture.album.id }}Display" href="{{ path('muimagemodule_album_' ~ routeArea ~ 'display', { 'id': picture.album.id, 'theme': 'ZikulaPrinterTheme' }) }}" title="{{ __('Open quick view window')|e('html_attr') }}" class="hidden"><span class="fa fa-eye"></span></a>
              <script type="text/javascript">
              /* <![CDATA[ */
                  ( function($) {
                      $(document).ready(function() {
                          mUImageInitInlineWindow($('albumItem{{ picture.album.id }}Display'), '{{ picture.album.getTitleFromDisplayPattern()|e('js') }}');
                      });
                  })(jQuery);
              /* ]]> */
              </script>
              {% else %}
                {{ picture.album.getTitleFromDisplayPattern() }}
              {% endif %}
            </dd>
        {% endif %}
        
    </dl>
    {{ include('@MUImageModule/Helper/includeStandardFieldsDisplay.html.twig', { obj: picture }) }}

    {% if app.request.query.get('theme') != 'ZikulaPrinterTheme' %}
        {# include display hooks #}
        {{ block('display_hooks') }}
    {% endif %}
</div>
{% endblock %}
{% block display_hooks %}
    {% set hooks = notifyDisplayHooks(eventName='muimagemodule.ui_hooks.pictures.display_view', id=picture.id, urlObject=currentUrlObject) %}
    {% for providerArea, hook in hooks %}
        {% if providerArea != 'provider.scribite.ui_hooks.editor' %}{# fix for #664 #}
            {{ hook }}
        {% endif %}
    {% endfor %}
{% endblock %}
{% block footer %}
    {{ parent() }}


{% if app.request.query.get('theme') != 'ZikulaPrinterTheme' %}
    <script type="text/javascript">
    /* <![CDATA[ */
        ( function($) {
            $(document).ready(function() {
                $('a.lightbox').lightbox();
            });
        })(jQuery);
    /* ]]> */
    </script>
{% endif %}
{% endblock %}
