{# purpose of this template: pictures view filter form #}
{% if hasPermission('MUMUImageModule:Picture:', '::', 'ACCESS_EDIT') %}
    {% form_theme quickNavForm with [
        '@MUMUImageModule/Form/bootstrap_3.html.twig',
        'ZikulaFormExtensionBundle:Form:form_div_layout.html.twig'
    ] %}
    {{ form_start(quickNavForm, {attr: {id: 'mUMUImageModulePictureQuickNavForm', class: 'mumuimagemodule-quicknav navbar-form', role: 'navigation'}}) }}
    {{ form_errors(quickNavForm) }}
    <fieldset>
        <h3>{{ __('Quick navigation') }}</h3>
        {% if albumFilter is not defined or albumFilter == true %}
            {{ form_row(quickNavForm.album) }}
        {% endif %}
        {% if workflowStateFilter is not defined or workflowStateFilter == true %}
            {{ form_row(quickNavForm.workflowState) }}
        {% endif %}
        {% if searchFilter is not defined or searchFilter == true %}
            {{ form_row(quickNavForm.q) }}
        {% endif %}
        {% if sorting is not defined or sorting == true %}
            {{ form_row(quickNavForm.sort) }}
            {{ form_row(quickNavForm.sortdir) }}
        {% else %}
            {{ form_row(quickNavForm.sort, {attr: {class: 'hidden'}}) }}
            {{ form_row(quickNavForm.sortdir, {attr: {class: 'hidden'}}) }}
        {% endif %}
        {% if pageSizeSelector is not defined or pageSizeSelector == true %}
            {{ form_row(quickNavForm.num) }}
        {% endif %}
        {% if showTitleFilter is not defined or showTitleFilter == true %}
            {{ form_row(quickNavForm.showTitle) }}
        {% endif %}
        {% if showDescriptionFilter is not defined or showDescriptionFilter == true %}
            {{ form_row(quickNavForm.showDescription) }}
        {% endif %}
        {% if albumImageFilter is not defined or albumImageFilter == true %}
            {{ form_row(quickNavForm.albumImage) }}
        {% endif %}
        {{ form_widget(quickNavForm.updateview) }}
    </fieldset>
    {{ form_end(quickNavForm) }}
    <script type="text/javascript">
    /* <![CDATA[ */
        ( function($) {
            $(document).ready(function() {
                mUMUImageInitQuickNavigation('picture');
                {% if searchFilter|default and searchFilter == false %}
                    {# we can hide the submit button if we have no quick search field #}
                    $('#quicknavSubmit').addClass('hidden');
                {% endif %}
            });
        })(jQuery);
    /* ]]> */
    </script>
{% endif %}
